game:GetService("StarterGui"):SetCore("SendNotification",{
	Title = "MYN HUB SPAM BUTTON", -- Required
	Text = "LOADED!", -- Required
	Icon = "" -- Optional
})


local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "Spam"
gui.ResetOnSpawn = false
gui.Parent = game.CoreGui

local buttonToggle = Instance.new("TextButton")
buttonToggle.Size = UDim2.new(0, 100, 0, 20)
buttonToggle.Position = UDim2.new(0, 10, 0, 10)
buttonToggle.AnchorPoint = Vector2.new(0, 0)
buttonToggle.Text = "Spam"
buttonToggle.TextSize = 7
buttonToggle.BackgroundTransparency = 0.8
buttonToggle.TextTransparency = 0.2
buttonToggle.Parent = gui

local spamActive = false
local debounce = false

local function toggleSpam()
    spamActive = not spamActive

    if spamActive then
        buttonToggle.Text = "Spam On"
        while spamActive do
            if not debounce then
                debounce = true
                game.ReplicatedStorage.Remotes.ParryButtonPress:Fire()
                wait(0)
                debounce = false
            end
        end
    else
        buttonToggle.Text = "Spam Off"
    end
end

buttonToggle.MouseButton1Click:Connect(function()
    toggleSpam()
end)
