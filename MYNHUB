local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "SpamButton"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = LocalPlayer.PlayerGui

local SpamButton = Instance.new("TextButton")
SpamButton.Text = "Spam Button: Off"
SpamButton.Position = UDim2.new(0.600,-100,0.110,-20)
SpamButton.Size = UDim2.new(0,100,0,50)
SpamButton.TextColor3 = Color3.fromRGB(255,0,0)
SpamButton.BackgroundColor3 = Color3.new(0,0,0)
SpamButton.BorderColor3 = Color3.new(0,0,0)
SpamButton.BorderSizePixel = 3
SpamButton.Draggable = true
SpamButton.Transparency = 0
SpamButton.TextTransparency = 0
SpamButton.Parent = ScreenGui

local SpamButtonToggle = false

local function ToggleButton(Button, ToggleState)
    if ToggleState then
        Button.TextColor3 = Color3.fromRGB(0,255,0)
    else
        Button.TextColor3 = Color3.fromRGB(255,0,0)
    end
end

SpamButton.MouseButton1Click:Connect(function()
    SpamButtonToggle = not SpamButtonToggle
    ToggleButton(SpamButton, SpamButtonToggle)
    if SpamButtonToggle then
        SpamButton.Text = "Spam Button: On"
    else
        SpamButton.Text = "Spam Button: Off"
    end
end)

while true do
    SpamButton.BorderColor3 = Color3.new(255,0,0)
    wait()
    SpamButton.BorderColor3 = Color3.new(255,128,0)
    wait()
    SpamButton.BorderColor3 = Color3.new(255,255,0)
    wait()
    SpamButton.BorderColor3 = Color3.new(0,128,0)
    wait()
    SpamButton.BorderColor3 = Color3.new(0,0,255)
    wait()
    SpamButton.BorderColor3 = Color3.new(75,0,130)
    wait()
    SpamButton.BorderColor3 = Color3.new(127,0,255)
    wait(0.1)
end
